
.curGodsPrice {
	width: 90%;
	margin: 0 auto;
	color: #F0AB3F;
	line-height: 30rpx;
	margin-top: 10rpx;
	margin-bottom: 20rpx;
}
.goodsTitle{
	width: 100%;
	font-size: 30rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	height: 90rpx;
}
.bottomText{
	width: 90%;
	margin: 0 auto;
	margin-top: 20rpx;
}
.bottomContent{
	width: 100%;
	margin-top: 20rpx;
}
.selectGoods{
	width: 92%;
	margin: 0 auto;
	margin-top: 30rpx;
	/* overflow: hidden; */
}
.goodsList{
	width: 100%;
	overflow: hidden;
	margin-top: 20rpx;
}
.eachGoods{
	width: 48.5%;
	margin: 10rpx 0.75%;
	border-radius: 15rpx;
	overflow: hidden;
	box-shadow: 0 0 10rpx #C0C0C0;
	float: left;
}
.eachGoods image{
	width: 100%;
	height: 250rpx;
	display: block;
}
.title{
	font-size: 35rpx;
	font-weight: 700;
}
.MidTab{
	width: 100%;
	border-bottom: 1rpx solid #eeeeee;
	margin-top: 20rpx;
}
.tabview{
	width: 690rpx;
	overflow: hidden;
	margin: 0 auto;
}
.eachTab{
	width: 230rpx;
	float: left;
	text-align: center;
	font-size: 30rpx;
	font-weight: 700;
	line-height: 60rpx;
}
.bordrView{
	width: 60rpx;
	height: 6rpx;
	background-color: #000000;
	margin: 0 auto;
}
.holePage{
	width: 100%;
}
.holePage image{
	width: 100%;
	display: block;
}
.goBack{
	width: 40rpx;
	height: 40rpx;
	position: fixed;
	top: 80rpx;
	left: 20rpx;
}
.goBack image{
	width: 100%;
	height: 100%;
	display: block;
}
.moreIcon{
	width: 40rpx;
	height: 40rpx;
	position: fixed;
	top: 85rpx;
	right: 30rpx;
}
.moreIcon image{
	width: 100%;
	height: 100%;
	display: block;
}
.topHeadImg{
	width: 150rpx;
	height: 150rpx;
	position: absolute;
	left: 300rpx;
	top: 130rpx;
	border-radius: 15rpx;
}
.topHeadImg image{
	width: 100%;
	height: 100%;
	display: block;
}
.shopInfo{
	width: 100%;
	padding-top: 80rpx;
}
.shopName{
	width: 100%;
	text-align: center;
	font-size: 40rpx;
	font-weight: 700;
}
.shopDetail{
	width: 100%;
	text-align: center;
	font-size: 20rpx;
	color: #717171;
	margin-top: 10rpx;
}
.couponView{
	width: 100%;
	overflow: hidden;
	margin-top: 20rpx;
}
.leftCou{
	width: 300rpx;
	height: 60rpx;
	margin-left: 70rpx;
	float: left;
	position: relative;
}
.leftCou image{
	width: 100%;
	height: 100%;
	display: block;
}
.leftCou .left{
	width: 220rpx;
	line-height: 60rpx;
	color: #FFFFFF;
	font-size: 25rpx;
	left: 0rpx;
	top: 0rpx;
	position: absolute;
	/* background-color: #000000; */
	text-align: center;
}
.leftCou .right{
	width: 80rpx;
	line-height: 60rpx;
	color: #FFFFFF;
	font-size: 25rpx;
	right: 0rpx;
	top: 0rpx;
	position: absolute;
	/* background-color: #000000; */
	text-align: center;
}
.addView{
	width: 85%;
	overflow: hidden;
	margin: 0 auto;
	height: 40rpx;
	margin-top: 15rpx;
	color: #8A8A8A;
	font-size: 22rpx;
}
.addView .left{
	float: left;
	position: relative;
	width: 80%;
	height: 100%;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.addView .left image{
	width: 20rpx;
	height: 20rpx;
	display: block;
	position: absolute;
	left: 0;
	top: 10rpx;
}
.addView .left text{
	/* font-size: 20upx; */
	line-height: 40rpx;
	position: absolute;
	left: 30rpx;
}
.addView .right{
	width: 20%;
	float: left;
	height: 100%;
	position: relative;
}
.addView .right image{
	width: 20rpx;
	height: 20rpx;
	display: block;
	position: absolute;
	right: 0rpx;
	top: 10rpx;
}
.addView .right text{
	position: absolute;
	right: 30rpx;
	/* font-size: 20upx; */
	line-height: 40rpx;
}


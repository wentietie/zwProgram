
.selectGoods{
	width: 92%;
	margin: 0 auto;
	margin-top: 30rpx;
	/* overflow: hidden; */
}
.goodsList{
	width: 100%;
	overflow: hidden;
	margin-top: 20rpx;
}
.eachGoods{
	width: 48.5%;
	margin: 10rpx 0.75%;
	border-radius: 15rpx;
	overflow: hidden;
	box-shadow: 0 0 10rpx #C0C0C0;
	float: left;
}
.eachGoods image{
	width: 100%;
	height: 250rpx;
	display: block;
}
.title{
	font-size: 35rpx;
	font-weight: 700;
}
.curGodsPrice {
	width: 90%;
	margin: 0 auto;
	color: #F0AB3F;
	line-height: 30rpx;
	margin-top: 10rpx;
	margin-bottom: 20rpx;
}
.goodsTitle{
	width: 100%;
	font-size: 30rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	height: 90rpx;
}
.bottomText{
	width: 90%;
	margin: 0 auto;
	margin-top: 20rpx;
}
.bottomContent{
	width: 100%;
	margin-top: 10rpx;
}
.msgPush{
	width: 90%;
	margin: 0 auto;
}
.msgPush .title{
	font-size: 35rpx;
	font-weight: 700;
}
.msgPush .bottom{
	font-size: 25rpx;
}
.bottomView{
	width: 100%;
	padding: 40rpx 0;
	border-radius: 25rpx;
	position: relative;
	margin-top: -25rpx;
	background-color: white;
}
.address{
	width: auto;
	margin-top: 30rpx;
	font-size: 30rpx;
}
.sexAndage{
	width: auto;
	margin-top: 0rpx;
	overflow: hidden;
}
.sex{
	width: 150rpx;
	font-size: 30rpx;
	line-height: 30rpx;
	border-right: 1rpx solid #FFFFFF;
	float: left;
}
.age{
	font-size: 30rpx;
	line-height: 30rpx;
	float: left;
	margin-left: 30rpx;
}
.name{
	font-size: 40rpx;
	font-weight: 700;
}
.pageTop{
	width: 100%;
	background-color: #000000;
	padding: 40rpx 0;
}
.pageTop image{
	width: 130rpx;
	height: 130rpx;
	position: absolute;
	top: 100rpx;
	right: 30rpx;
}
.holePage{
	width: 100%;
}
.leftInfo{
	margin-left: 30rpx;
	color: white;
	margin-top: 30rpx;
	margin-bottom: 80rpx;
}

